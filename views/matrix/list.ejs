<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %> <% if (messages.error) { %>
<p style="color: red"><%- messages.error %></p>
<% } %> <% if (messages.success) { %>
<p style="color: green"><%- messages.success %></p>
<% } %>

<section id="hero" class="hero d-flex align-items-center">
  <div class="container">
    <a class="btn btn-success m-3" href="/matrix/add">Add New matrix</a>
    <br />

    <table class="table table-dark table-striped m-3" width="80%" border="0">
      <tr style="text-align: left; background-color: #ccc">
        <th>Nama Alternatif</th>
        <th>Value Bobot</th>
        <th>Nama Skala</th>
        <th>Action</th>
      </tr>

      <% if (data) { %> <% data.forEach(function(matrix){ %>
      <tr>
        <td><%= matrix.nmalternatif %></td>
        <td><%= matrix.value %></td>
        <td><%= matrix.nm_skala %></td>
        <td>
          <div style="float: left">
            <a class="btn btn-primary" href="/matrix/edit/<%= matrix.id_matrix %>">Edit</a> &nbsp;
            <form method="post" action="/matrix/delete/<%= matrix.id_matrix %>" style="float: right">
              <input class="btn btn-danger" type="submit" name="delete" value="Delete" onClick="return confirm('Are you sure you want to delete?')" />
              <input type="hidden" name="_method" value="DELETE" />
            </form>
          </div>
        </td>
      </tr>
      <% }) %> <% } %>
    </table>
  </div>
</section>

<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>
