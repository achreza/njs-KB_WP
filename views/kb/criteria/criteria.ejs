<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Kriteria</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Kriteria</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <div class="container">
        <div class="row ">
            <div class="col-lg-8 offset-lg-2">
                <h2 class="font-weight-bold text-center mb-4">Kriteria-kriteria yang berpengaruh dalam penentuan alat KB
                    <%=jenis %>
                </h2>
            </div>
        </div>
        <div class="row ">
            <% if(data){%>
                <% data.forEach(function(kriteria) { %>
                    <div class="col-lg-4 col-sm-12 d-flex justify-content-center">
                        <div class="box">
                            <p style="font-size: 14px;" class="font-weight-bold">
                                <%=kriteria.nm_kriteria %>
                            </p>
                            <p style="text-align:justify; font-size: 11px;">
                                <%= kriteria.jenis %>
                            </p>
                            <div class="btn-wrap d-flex justify-content-end">
                                <a href=""><button type="button"
                                        class="btn btn-primary btn-sm btn-small-custom">Detail</button></a>

                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <%}%>
        </div>
        <div class="row ">
            <div class="col-lg-12 m-auto">
                <a href="/priority">
                    <button type="submit" class="btn btn-primary mb-4 mt-4 " style="width:100%;">
                        Selanjutnya</button></a>
            </div>
        </div>
    </div>
</div>